@model HealthTrack.Web.Models.HealthRecord

<h2>Edit Health Record</h2>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="Diagnosis" class="form-label">Diagnosis</label>
        <input asp-for="Diagnosis" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Medications" class="form-label">Medications</label>
        <input asp-for="Medications" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <input asp-for="Notes" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Date" class="form-label">Date</label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
